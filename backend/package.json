{
    "name": "stackflow-crm-backend",
    "version": "1.0.0",
    "description": "StackFlow CRM Backend API",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest --coverage",
        "db:migrate": "node scripts/migrate.js",
        "db:seed": "node prisma/seeds/consolidatedOptions.seed.js",
        "db:reset": "npx prisma migrate reset --force --skip-seed && npm run db:seed",
        "db:setup": "node scripts/setup-database.js"
    },
    "keywords": [
        "crm",
        "express",
        "postgresql",
        "rest-api"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^6.18.0",
        "bcrypt": "^5.1.1",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-rate-limit": "^8.1.0",
        "google-auth-library": "^10.4.2",
        "helmet": "^7.0.0",
        "joi": "^18.0.1",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "nodemailer": "^7.0.10",
        "prisma": "^6.18.0",
        "slugify": "^1.6.6",
        "uuid": "^13.0.0",
        "winston": "^3.11.0"
